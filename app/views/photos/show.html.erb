<% provide(:show, "pgshow") %>
<% provide(:class, "pgbody") %>
<div class="photo-show-warp">

<div class="photo-show">
<div class="photo-show-img">
  <%= image_tag(@photo.picture.url, alt: 'Image',id:"imageshow") if @photo.picture? %>
  
</div>
</div> 

<div class="photo-comments">

	<div class="user">
	  <div class="user-avater">
	  	<%= image_tag(@user.image_url,size: "50x50", alt: 'Image',id:"imageshow") if @user.image_url? %></div>
	  <div class="user-name">
	    <%= @user.name %>
	  <div class="user-title"><h4><%= @photo.name %></h4></div>
	  </div>
	</div>

	<div class="photo-comments-like">
	  <%= render "likes/comment_likes" %>
	</div>

  <div class="comments-list">

       <div class="comment">
         <ul>

         <% if current_user %>
  	       <div class="form-partial">
	           <%= render "comments/form" %>
           </div>
           <div class="comment-border"></div>
         <% end %>

           <div class="comments-partial"> <%= render partial: 'comments/comment', collection: @photo.comments %> </div>

         </ul>
       </div>

  </div>
  
</div>
</div>
