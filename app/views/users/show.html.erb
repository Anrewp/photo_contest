<div class="profile"><h1>Profile</h1></div>
  <div class="profile">

  <div class="profile-info">
    
      <ul>
        <h4>Information</h4>
        <li><div><%= image_tag current_user.image_url, alt: current_user.name, size: '50x50' %></div></li>
        <li><strong>Provider:</strong> <%= current_user.provider %></li>
        <li><strong>Name:</strong> <%= current_user.name %></li>
        <li><strong>email:</strong> <%= current_user.email %></li>
        <li id="token-li"><button id="token" onclick="getUserToken()"><p id="p">T</p></button></li>
        <li id="credentials-token"><strong>Token:</strong></li>

        <div class="profile-info-btn">
          <%= link_to 'Settings', edit_user_path(current_user.id),class: 'btn btn-m btn-default' %>
          <%= render 'form' %>
        </div>

          <% if current_user.provider.eql?("vkontakte") %>
        <div class="vk-upload">
           <button id='vk' class="btn btn-m btn-success" onclick="VkUpload()">Upload from VK
           </button>
        </div>
           <% end %>
<div class="col-lg-5 col-md-5 col-sm-5 imgspaceVk">
    <div class="vk-form"><%= render 'vk_form', index: '0' %></div>
    <div class="vk-form"><%= render 'vk_form', index: '1' %></div>
    <div class="vk-form"><%= render 'vk_form', index: '2' %></div>
    <div class="vk-form"><%= render 'vk_form', index: '3' %></div>
    <div class="vk-form"><%= render 'vk_form', index: '4' %></div>
</div>
      </ul>
  </div>

    <div class="profile-photos">
      <div id="profile-photos-collection">
      <h4>Your Photos</h4>
      <%= render partial: 'user_photos',collection: @user_photos, locals: { user_photos: @user_photos} %>
      </div>
      
       <div class="profile-pagination"> 
       <span id="pagination"> <%= paginate @user_photos, remote: true %> </span>
       </div>
    </div>

  </div>