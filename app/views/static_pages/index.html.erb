<% if current_user %>
  <div class="page-header">
    <h1>Here is some info about you...</h1>
  </div>
  <div class="panel panel-default">
    <div class="panel-body">
      <ul>
        <li><%= image_tag current_user.image_url, alt: current_user.name, size: '50x50' %></li>
        <li><strong>Provider:</strong> <%= current_user.provider %></li>
        <li><strong>Name:</strong> <%= current_user.name %></li>
        <li><strong>email:</strong> <%= current_user.email %></li>
      </ul>
    </div>
  </div>
  <div>
    <h1>Photo</h1>
 
  <div class="container">
      <%= link_to 'Add photo', new_user_photo_path(current_user),class: "btn btn-lg btn-success" %>

    <hr>

  </div>
<% else %>
  <%= render 'static_pages/welcome' %>
<% end %>
